<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- sombra -->
<item>
    <shape>
        <padding android:right="2dp" android:bottom="2dp" /> <!-- preenchimento de 2dp na direita e embaixo-->
        <solid android:color="#FFC4B0" /> <!-- cor da sombra-->
        <corners android:radius ="25dp" />
    </shape>
</item>

    <!-- quadrado com contorno-->
    <item>
        <shape>
            <solid android:color="#FFD8CB" /> <!-- cor de fundo do quadrado-->
            <stroke
                android:width="2dp"
                android:color="#FFAD92"/>  <!-- expessura e cor do stroke -->
            <corners android:radius="25dp"/>  <!-- arrendondamento do quadrado-->

        </shape>


    </item>

</layer-list>