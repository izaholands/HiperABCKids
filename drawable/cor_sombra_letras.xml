<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape>
            <padding  android:right="2dp" android:bottom="2dp" />
            <solid android:color="#FFE5A4" /> <!-- Cor da sombra com opacidade -->
            <corners android:radius="25dp" /> <!-- Ajuste o raio dos cantos se necessário -->
        </shape>
    </item>

    <!-- Quadrado com contorno -->
    <item>
        <shape>
            <size android:width="144dp"
                android:height="160dp"/>
            <solid android:color="#F2E2BA" /> <!-- Cor de fundo do quadrado -->
            <stroke
                android:width="2dp"
                android:color="#FFD775" /> <!-- Cor e espessura do contorno -->
            <corners android:radius="25dp" /> <!-- Ajuste o raio dos cantos se necessário -->
        </shape>
    </item>
</layer-list>